<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row g-4">
        <% posts.forEach(post => { %>
        <div class="col-lg-4">
            <div class="card shadow d-flex flex-column" style="height: 100%">
                <img src="/uploads/<%= post.image %>" class="img-fluid card-img-top" alt="<%= post.title %>">
                <div class="card-body p-4 d-flex flex-column" style="flex-grow: 1;">
                    <h2 class="card-title fw-bold text-secondary" style="min-height: 60px; color: black; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);">
                        <%= post.title %>
                    </h2>
                    <p class="card-text" style="flex-grow: 1; min-height: 120px; overflow: hidden;">
                        <%= post.content.substring(0, 200) %>...
                    </p>
                    <div>
                        <a href="/post/<%= post.slug %>" class="btn btn btn-outline-info mt-auto">Read More</a>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>Author: <%= post.user.name %></div>
                        <div>Created: <%= post.createdAt.toLocaleString() %></div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<div class="my-4 float-end d-inline-flex align-items-center gap-4">
    <% if (pagination.hasPrevPage) { %>
        <div>
            <a href="/?page=<%= pagination.prevPage %>" class="btn btn-secondary btn-sm">Previous</a>
        </div>
    <% } %>

    <span>Page <%= pagination.currentPage %> of <%= pagination.totalPage %></span>

    <% if (pagination.hasNextPage) { %>
        <div>
            <a href="/?page=<%= pagination.nextPage %>" class="btn btn-secondary btn-sm">Next</a>
        </div>
    <% } %>
    <a href="/?page=<%= pagination.nextPage %>" class="btn btn-secondary btn-sm">
        <i class="fa-solid fa-arrow-right"></i> Next
    </a>
</div>
</div>
<%- include('partials/footer.ejs') %>
